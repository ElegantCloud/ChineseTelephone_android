<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width = "fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10.0dp" 
    xmlns:android="http://schemas.android.com/apk/res/android">
		<TextView
	        android:textSize="20.0sp" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="@string/account"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="12.0dp"
	        android:layout_marginRight="10.0dp"
        />
		<LinearLayout 	
               android:background="@drawable/img_setting_content_bg"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10.0dp"
               android:layout_marginRight="10.0dp"
               >
                
                <LinearLayout 
                    android:id="@+id/account_setting_btn"
                    android:background="@drawable/setting_top_item_bg"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    
                    <ImageView 
                        android:layout_width="30.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:src="@drawable/account_setting"
                        />
                    
                    <TextView
                        android:textSize="18.0sp" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dp"
                        android:layout_weight="1.0"
                        android:text="@string/account_setting_item"
                        android:textColor="@color/dark_dim_gray"
                        android:gravity="center_vertical"
                        />
                    <ImageView 
                        android:layout_width="12.0dp"
                        android:layout_height="12.0dp"
                        android:layout_marginRight="10.0dp"
                        android:src="@drawable/into_icon"
                        />                   
                </LinearLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/setting_line_img" 
                    />
                
                <LinearLayout 
                    android:id="@+id/account_changePSW_btn"
                    android:background="@drawable/setting_top_item_bg"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    
                    <ImageView 
                        android:layout_width="30.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:src="@drawable/changepsw"
                        />
                    
                    <TextView
                        android:textSize="18.0sp" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dp"
                        android:layout_weight="1.0"
                        android:text="@string/account_changePSW_item"
                         android:textColor="@color/dark_dim_gray"
                        android:gravity="center_vertical"
                        />
                    <ImageView 
                        android:layout_width="12.0dp"
                        android:layout_height="12.0dp"
                        android:layout_marginRight="10.0dp"
                        android:src="@drawable/into_icon"
                        />                   
                </LinearLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/setting_line_img" 
                    />
                
                <LinearLayout 
                    android:id="@+id/account_getPSW_btn"
                    android:background="@drawable/setting_middle_item_bg"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    
                    <ImageView 
                        android:layout_width="30.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:src="@drawable/getpsw"
                        />
                    
                    <TextView
                        android:textSize="18.0sp" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:text="@string/account_getPSW_item"
                        android:textColor="@color/dark_dim_gray"
                        />
                    <ImageView 
                        android:layout_width="12.0dp"
                        android:layout_height="12.0dp"
                        android:layout_marginRight="10.0dp"
                        android:src="@drawable/into_icon"
                        />                   
                </LinearLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/setting_line_img" 
                    />
                
                <LinearLayout 
                    android:id="@+id/account_invite_btn"
                    android:background="@drawable/setting_bottom_item_bg"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:onClick="inviteFriend"
                    >
                    
                    <ImageView 
                        android:layout_width="30.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:src="@drawable/invite"
                        />
                    
                    <TextView
                        android:textSize="18.0sp" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:text="@string/invite_friend"
                        android:textColor="@color/dark_dim_gray"
                        />
                    <ImageView 
                        android:layout_width="12.0dp"
                        android:layout_height="12.0dp"
                        android:layout_marginRight="10.0dp"
                        android:src="@drawable/into_icon"
                        />                   
                </LinearLayout>
                
            </LinearLayout>
</LinearLayout>