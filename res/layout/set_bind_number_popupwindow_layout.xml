<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent" >

    <LinearLayout
        android:id="@+id/modify_psw_popupWindow_relativeLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/popupwindow_relativelayout_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popupwindow_title_relativelayout_bg" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/set_bind_number_title"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="10dp" 
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/bind_number_inform"
            android:textColor="@color/red"
            />
        
        <Button
            android:id="@+id/setAuth_choose_country_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text=""
            android:textSize="17dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/btn_bg"
            android:drawableRight="@drawable/down_into_icon"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/set_bind_number_message"
                android:textColor="@color/dark_dim_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/set_auth_number_editText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textfield_selector"
                android:ellipsize="end"
                android:inputType="number"
                android:textColor="@android:color/black" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <Button
                android:id="@+id/set_auth_cancelBtn"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/regist_btn_bg"
                android:gravity="center_horizontal"
            	android:paddingBottom="16dp"
                android:text="@string/cancel"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/set_auth_confirmBtn"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_btn_bg"
                android:gravity="center_horizontal"
            	android:paddingBottom="16dp"
                android:text="@string/ok"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            
        </LinearLayout>
    </LinearLayout>

</FrameLayout>