<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent" >

    <LinearLayout
        android:id="@+id/modify_psw_popupWindow_relativeLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/popupwindow_relativelayout_bg"
        android:paddingBottom="10dp"
        >
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popupwindow_title_relativelayout_bg"
            >
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/set_area_code"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp" 
            android:gravity="center_vertical"
            />
        
        </LinearLayout>
        
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >

        <EditText
            android:id="@+id/set_areacode_editText"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/textfield_selector"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:inputType="number">"

            <requestFocus />
        </EditText>
        
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

       <Button
            android:id="@+id/set_areacode_confirmBtn"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:background="@drawable/login_btn_bg"
            android:text="@string/ok"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" /> 
            
       <Button
            android:id="@+id/set_areacode_cancelBtn"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/regist_btn_bg"
            android:text="@string/cancel"
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" /> 
    	</LinearLayout>

     </LinearLayout>
</FrameLayout>