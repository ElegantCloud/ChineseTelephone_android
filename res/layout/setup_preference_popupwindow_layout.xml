<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent" >

    <LinearLayout
        android:id="@+id/modify_psw_popupWindow_relativeLayout"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/popupwindow_relativelayout_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/popupwindow_title_relativelayout_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/setup_popwin_title"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/is_auto_launch"
                android:textColor="@color/dark_dim_gray"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/auto_launch_radio_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:checkedButton="@+id/auto_launch_rbtn"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/auto_launch_rbtn"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="@string/yes"
                    android:textColor="@color/dark_dim_gray"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/manual_launch_rbtn"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="@string/no"
                    android:textColor="@color/dark_dim_gray"
                    android:textSize="18dp" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/is_auto_login"
                android:textColor="@color/dark_dim_gray"
                android:textSize="19dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/auto_login_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:checkedButton="@+id/auto_login_rbtn"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/auto_login_rbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/auto_login_rbtn_title"
                    android:textColor="@color/dark_dim_gray"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/manual_login_rbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/manual_login_rbtn_title"
                    android:textColor="@color/dark_dim_gray"
                    android:textSize="18dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/setup_cancelBtn"
                style="@style/popup_window_cancel_bt"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/setup_confirmBtn"
                style="@style/popup_window_ok_bt"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>