<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/notice_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/notice_flag_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/notice_unread" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/notice_time"
                    android:textColor="@color/dim_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/notice_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="2013-01-10"
                    android:textColor="@color/dim_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/notice_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Content 消息内容asdfasdfasdasdfasdfashfiajl;jfs;ldjfalsjf;lasjdflajsdfjafslj"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>