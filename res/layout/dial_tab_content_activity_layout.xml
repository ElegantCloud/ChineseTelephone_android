<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/dial_phone_textView"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/img_dial_phone_textview_bg"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="48dp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/dial_btn_gridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dial_phone_textView"
        android:background="@color/gray"
        android:cacheColorHint="@color/clear"
        android:fadingEdge="none"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:listSelector="@color/clear"
        android:numColumns="3"
        android:padding="1dp"
        android:scrollbars="none"
        android:verticalSpacing="1dp" >
    </GridView>

    <LinearLayout
        android:id="@+id/dial_functionBtn_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" >

        <include
            android:id="@+id/dial_newContact_functionBtn"
            layout="@layout/dial_function_btn_layout" />

        <ImageButton
            android:id="@+id/dial_call_functionBtn"
            android:layout_width="105dp"
            android:layout_height="71dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:background="@drawable/dial_call_btn_bg"
            android:contentDescription="@string/dialBtn_imageView_content_description" />

        <include
            android:id="@+id/dial_clearDialPhone_functionBtn"
            layout="@layout/dial_function_btn_layout" />
    </LinearLayout>

</RelativeLayout>